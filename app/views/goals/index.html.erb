<div class="container">
    <div class="row">
      <div class="page-header">
        <h1>Metas</h1>
      </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Título</th>
          <th>Descrição</th>
          <th>Prazo</th>

        </tr>
      </thead>

      <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <td><%= goal.name %></td>
            <td><%= goal.description %></td>
            <td><%= goal.deadline %></td>
            <td><%= button_to 'Visualizar', goal, class: "btn btn-info", :method => :get %></td>  
            <td><%= button_to 'Editar', edit_goal_path(goal), class: "btn btn-primary", :method => :get %></td>
            <td><%= button_to 'Excluir', goal, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table><br>

    <%= button_to "Nova Meta", new_goal_path, class: "btn btn-success", :method => :get %>

  </div>
</div>