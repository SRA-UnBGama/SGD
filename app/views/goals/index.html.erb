<h1>Listing goals</h1>

<table>
  <thead>
    <tr>
      <th>Name goal</th>
      <th>Description goal</th>
      <th>Value goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name_goal %></td>
        <td><%= goal.description_goal %></td>
        <td><%= goal.value_goal %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path %>
