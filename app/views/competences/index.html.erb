<div class="container">
    <div class="row">
      <div class="page-header">
      <h1>Competências</h1>        
      </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.name_competence %></td>
        <td><%= link_to 'Editar', edit_competence_path(competence) %></td>
        <td><%= link_to 'Inativar', competence, method: :delete, data: { confirm: 'Tem certeza que deseja inativar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to "Nova Competência", new_competence_path, class: "btn btn-success", :method => :get %>
</div>
</div>