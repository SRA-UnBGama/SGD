<div class="container">
    <div class="row">
      <div class="page-header">
      <h1>Competências</h1>        
      </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.name_competence %></td>
        <td><%= competence.is_active_competence ? "Ativado" : "Desativado"   %></td>
        <td><%= button_to 'Editar', edit_competence_path(competence), class: "btn btn-primary", :method => :get %></td>
        <td><%= button_to (competence.is_active_competence ? "Desativar" : "Ativar"), competence, tooltip: "%s Competência?" % ( competence.is_active_competence ? "desativar" : "ativar"), class: "btn btn-large btn-danger", method: :delete, data: {confirm: 'Tem certeza que deseja %s esta competência?' % ( competence.is_active_competence ? "desativar" : "ativar")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= button_to "Nova Competência", new_competence_path, class: "btn btn-success", :method => :get %>
</div>
</div>