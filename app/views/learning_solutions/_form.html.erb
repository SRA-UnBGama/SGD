<%= simple_form_for(@learning_solution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label "Descrição" %>
    <%= f.input :description, :label => false %>

    <%= f.label "Categoria" %>
    <%= f.input :category, :label => false %>
  </div>

    <div class="actions">
    <%= link_to raw("<i class=\"icon-white icon-arrow-left i\">Voltar</i>"), learning_solutions_path , class:"btn btn-warning"%>
    <%= f.submit 'Salvar Solução de Aprendizagem', class:"btn btn-success" %>
  </div>

<% end %>
