<div>
<h4>Metas</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Prazo</th>
            <th colspan="4"></th>
            <th>Nível de Desenvolvimento</th>

            
          </tr>
        </thead>

        <tbody>
         <% @goals = @evaluation.evaluation_items.where(:type => "Goal") %>
         <% @goals.each do |goals| %>
            <tr>
              <td><%= goals.name %></td>
              <td><%= goals.description %></td>
              <td><%= goals.deadline %></td>
              <td> <%= select(:post, nil, [["Não Colaborou", 1], ["Colaborou Pouco", 2], ["Colaborou Medianamente", 3],["Colaborou Muito", 4],["Colaborou Totalmente",5]],{},{ :class => 'btn btn-primary dropdown-toggle' })  %></td>
              
          <% end %>
        </tbody>
      </table>
</div>