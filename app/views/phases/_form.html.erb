<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker({
        format: 'dd/mm/yyyy',
        language: 'pt-BR'
    });
  })
</script>

<%= simple_form_for(@phase) do |f| %>
  <% if @phase.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@phase.errors.count, "erro encontrado") %> :</h4>

      <ul>
      <% @phase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label "Data Inicial: " %><br />
    <%= f.text_field :start_date_phase, 'data-behaviour' => 'datepicker', :required => true %><br />

    <%= f.label "Data Final: " %><br />
    <%= f.text_field :end_date_phase, 'data-behaviour' => 'datepicker', :required => true %><br />
    <br>

     <%= link_to raw("<i class=\"icon-white icon-arrow-left i\">Voltar</i>"), evaluation_period_path(@phase.evaluation_period) , class:"btn btn-warning"%>
    <%= f.submit 'Definir Fase de Avaliação ', class:"btn btn-success" %>

  </div>
<% end %>
