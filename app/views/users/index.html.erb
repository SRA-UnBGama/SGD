<h1>Lista de Usuários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matrícula FUB</th>
      <th>Matrícula SIAPE</th>
      <th>Centro de Custo</th>
      <th>Data de Admissão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name_user %></td>
        <td><%= user.fub_registry %></td>
        <td><%= user.siape_registry %></td>
        <td><%= user.cost_center %></td>
        <td><%= user.admission_date %></td>
        <td><%= button_to 'Visualizar', user, class: "btn btn-info", :method => :get %></td>
        <td><%= button_to 'Editar', edit_user_path(user), class: "btn btn-primary", :method => :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Novo Usuário', new_user_path %>
