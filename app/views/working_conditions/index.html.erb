<div class="container" >
  <div class="row">
    <div class="page-header">
        <h1>Condições de Trabalho</h1>
    </div>

     <table class="table table-striped"> 
    <thead>
      <tr>
        <th>Nome</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @working_conditions.each do |working_condition| %>
        <tr>
          <td><%= working_condition.name_working_condition %></td>
          <td><%= button_to 'Editar', edit_working_condition_path(working_condition), class: "btn btn-primary", :method => :get %></td>
          <td><%= button_to 'Inativar', working_condition, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza que deseja inativar?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table><br>
    <%= button_to "Nova Condição", new_working_condition_path, class: "btn btn-success", :method => :get %>
  </div>
</div>