<h2>Logar</h2>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
   <div>
      <%= f.label "Matrícula FUB: " %>
      <%= f.input :fub_registry, :label => false %>
    </div>

    <div>
      <%= f.label "Senha: " %>
      <%= f.input :password, :label => false %>
    </div>
  </div>
  </br>
  <div class="form-actions">
   	  <%= f.submit 'Logar', class:"btn btn-success" %>
      <%= link_to raw("<i class=\"icon-white icon-arrow-left i\">Cadastrar Novo Usuário</i>"), new_user_registration_path , class:"btn btn-primary"%>
 </div>
<% end %>

<%= render "devise/shared/links" %>
