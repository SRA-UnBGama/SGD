<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Lista de Membros</h1>
      <p id="notice"><%= notice %></p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Membros</th>
            <th>Local de trabalho</th>
            <th>Chefia</th>
          </tr>
        </thead>
      <tbody>
          <tr>
            <td><%= @team.list_name_members %></td>
            <td><%= @team.workplace %></td>
            <td><%= @team.leader %></td>
          </tr>
   
      </tbody>
      </table>
      <table>      
      <tr>
        <td>
           <td>
          <%= button_to (@team.is_confirm ? "Não confirmar" : "Confirmar"), { :controller => :teams, :action => :confirm_team, :team_id => @team.id },data: {confirm: 'Tem certeza que deseja %s esta equipe?' % ( @team.is_confirm ? "Não confirmar" : "Confirmar")},class: "btn btn-large btn-danger" %>
        </td>


        
      </tr>
      </tbody>
        </table>
      <div class="margin-top-20">
        <%= link_to raw("<i class=\"icon-white icon-arrow-left i\">Voltar</i>"),teams_path , class:"btn btn-warning"%>
      </div>
    </div>
  </div>
</div>
