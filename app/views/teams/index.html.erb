<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>  Equipes</h1>
    </div>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Local de Trabalho</th>
          <th>Chefia</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.workplace %></td>
            <td><%= team.leader %></td>
            <td><%= team.show_status %></td>
            <td><%= button_to 'Visualizar', team, class: "btn btn-info",:method =>:get  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
