<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker({
        format: 'dd/mm/yyyy',
        language: 'pt-BR'
    });
  })
</script>

<%= simple_form_for(@evaluation_period) do |f| %>
  <% if @evaluation_period.errors.any? %>
    <div  class="alert alert-danger">
      <h4><%= pluralize(@evaluation_period.errors.count, "error") %> prohibited this evaluation_period from being saved:</h4>

      <ul>
      <% @evaluation_period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div>
  <div class="field">
    <%= f.label "Início do Período Avaliativo: " %>
    <%= f.text_field :start_date_evaluation,:value => (f.object.start_date_evaluation.strftime('%d/%m/%Y') if f.object.start_date_evaluation) ,'data-behaviour' => 'datepicker',:rows => "4",class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Fim do Período Avaliativo" %>
    <%= f.text_field :end_date_evaluation,:value => (f.object.end_date_evaluation.strftime('%d/%m/%Y') if f.object.end_date_evaluation),'data-behaviour' => 'datepicker',:rows => "4",class: "form-control" %>
  </div>
  <div class=  "action">
    <%= link_to raw("<i class=\"icon-white icon-arrow-left i\">Voltar</i>"), evaluation_periods_path , class:"btn btn-warning"%>
    <%= f.submit 'Definir período', class:"btn btn-success" %>
  </div>
  </div>
<% end %>
